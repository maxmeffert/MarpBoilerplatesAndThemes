{
  "name": "marpme",
  "version": "1.0.0",
  "description": "Repository for Marp Boilderplates and Themes",
  "main": "",
  "scripts": {
    "build:minimal-css": "npx sass ./themes/minimal/src/minimal.scss ./themes/minimal/minimal.css",
    "build:minimal-pdf": "npx marp -c ./config/marp.minimal.pdf.yml",
    "build:minimal-html": "npx marp -c ./config/marp.minimal.html.yml",
    "build:minimal-png": "npx marp -c ./config/marp.minimal.png.yml",
    "build": "yarn run build:minimal-css ; yarn run build:minimal-pdf ; yarn run build:minimal-html ; yarn run build:minimal-png"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxmeffert/MarpMe.git"
  },
  "author": "Maximilian Meffert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxmeffert/MarpMe/issues"
  },
  "homepage": "https://github.com/maxmeffert/MarpMe#readme",
  "devDependencies": {
    "@marp-team/marp-cli": "^0.17.3",
    "highlight.js": "^10.1.2",
    "sass": "^1.26.3"
  }
}
